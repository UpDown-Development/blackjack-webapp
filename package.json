{
  "name": "blackjack-webapp",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.5",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.19.1",
    "@types/react": "^16.9.53",
    "@types/react-dom": "^16.9.8",
    "prettier": "^2.1.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-scripts": "3.1.2",
    "serve": "^11.3.2",
    "typescript": "^4.0.3",
    "web-vitals": "^0.2.4"
  },
  "devDependencies": {
    "@cypress/code-coverage": "3.8.2",
    "@cypress/instrument-cra": "1.3.1",
    "cypress": "5.1.0",
    "cypress-multi-reporters": "1.4.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-cypress": "2.11.1",
    "eslint-plugin-prettier": "3.1.4",
    "husky": "4.2.5",
    "mocha": "8.1.3",
    "mochawesome": "6.1.1",
    "mochawesome-merge": "4.1.0",
    "mochawesome-report-generator": "5.1.0",
    "nyc": "15.1.0",
    "start-server-and-test": "1.11.3",
    "wait-on": "5.2.0"
  },
  "scripts": {
    "start": "react-scripts -r @cypress/instrument-cra start",
    "start:ci": "serve --no-clipboard --listen ${PORT:-3000}",
    "types": "tsc --noEmit",
    "prettier": "prettier --write \"**/*.{js,ts,tsx}\"",
    "build": "react-scripts build",
    "eject": "react-scripts eject",
    "cypress:open": "cypress open",
    "test": "npm run test:unit & npm run test:e2e",
    "test:unit": " react-scripts test --watchAll=false --coverage=true",
    "test:e2e": "cypress run coverage=true"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "plugin:prettier/recommended",
      "plugin:cypress/recommended"
    ],
    "plugins": [
      "cypress",
      "prettier"
    ],
    "rules": {
      "no-unused-expressions": 0
    },
    "env": {
      "cypress/globals": true
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run prettier && npm run types"
    }
  },
  "nyc": {
    "exclude": [
      "src/models/*.tsx",
      "src/index.tsx",
      "src/serviceWorker.ts"
    ],
    "reporter": [
      "html",
      "json"
    ]
  }
}
